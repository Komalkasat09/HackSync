{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Skill Taxonomy",
    "description": "A hierarchical definition of skills, domains, and relationships.",
    "type": "object",
    "properties": {
        "taxonomy_version": {
            "type": "string",
            "example": "1.0.0"
        },
        "domains": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "skills": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "aliases": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "related_skills": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "category": {
                                    "type": "string",
                                    "enum": [
                                        "Language",
                                        "Framework",
                                        "Tool",
                                        "Concept"
                                    ]
                                }
                            },
                            "required": [
                                "id",
                                "name"
                            ]
                        }
                    }
                },
                "required": [
                    "id",
                    "name",
                    "skills"
                ]
            }
        }
    }
}